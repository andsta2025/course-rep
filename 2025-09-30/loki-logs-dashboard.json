{
  "id": null,
  "title": "Loki Logs Overview",
  "tags": ["loki", "logs"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "logs",
      "title": "All Logs",
      "id": 1,
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"kubernetes-pods\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true
      },
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 12
      }
    },
    {
      "type": "stat",
      "title": "Log Entries (last 5m)",
      "id": 2,
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "count_over_time({job=\"kubernetes-pods\"}[5m])",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 6,
        "h": 6
      }
    },
    {
      "type": "timeSeries",
      "title": "Logs Rate (last 5m)",
      "id": 3,
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "rate({job=\"kubernetes-pods\"}[5m])",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 6,
        "y": 12,
        "w": 18,
        "h": 6
      }
    }
  ]
}
